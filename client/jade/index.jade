head
	base(href="/")
	title holli - happy holiday
	meta(name="viewport", content="width=device-width, initial-scale=1")

body(ng-app="app")
	nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
		.container-fluid
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse-part')
					span.sr-only toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				span.navbar-brand 
					i.fa.fa-power-off.fa-lg
					span holli


			#navbar-collapse-part.collapse.navbar-collapse
				ul.nav.navbar-nav(ng-show="currentUser")
					li(ui-sref-active="active")
						a(ui-sref='member-dashboard')
							span 
							| Home
					li(ui-sref-active="active")
						a(ui-sref='team-lead')
							span 
							| Team-Lead
					li(ui-sref-active="active")
						a(ui-sref='all-teams')
							span 
							| All Teams Overview
					li(ui-sref-active="active")
						a(ui-sref='teams-config')
							span 
							| Team-Config
					li(ui-sref-active="active")
						a(ui-sref='employees')
							span 
							| Employees
				ul.nav.navbar-nav.navbar-right
					+loginButtons

	.view(ui-view)
