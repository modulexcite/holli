head
	base(href="/")
	title ivo - internal vacation organizer
	meta(name="viewport", content="width=device-width, initial-scale=1")

body(ng-app="app")
	nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
		.container-fluid
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse-part')
					span.sr-only toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand ivo

			#navbar-collapse-part.collapse.navbar-collapse
				ul.nav.navbar-nav(ng-show="currentUser")
					li(ui-sref-active="active")
						a(ui-sref='member-dashboard')
							span 
							| Home
					li(ui-sref-active="active")
						a(ui-sref='teams-config')
							span 
							| Teams
				ul.nav.navbar-nav.navbar-right
					+loginButtons

	.view(ui-view)
