.container-fluid
	.row
		.col-md-12
			.panel.panel-primary
				.panel-heading Search
				.panel-body
					form
						.form-group
							.input-group
								.input-group-addon
									i.glyphicon.glyphicon-search
								input.form-control(type="text", placeholder="Search...", ng-model="search")

			.panel.panel-info
				.panel-heading Calendar
				.panel-body
					#teamCalendar.calendar(ui-calendar="calendarConfig.calendar", ng-model="requestEventSources", calendar="teamCalendar")
